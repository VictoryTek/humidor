DATABASE_URL=postgresql://humidor_user:humidor_pass@localhost:5432/humidor_db
RUST_LOG=debug
PORT=3000

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_VALUE
# Token lifetime in hours (default: 2 hours if not set)
# Shorter lifetimes are more secure but require users to login more frequently
JWT_TOKEN_LIFETIME_HOURS=2